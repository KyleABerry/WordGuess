<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HangMan" >

    <EditText
        android:id="@+id/guessCharInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/guessLabel"
        android:layout_toRightOf="@+id/guessLabel"
        android:ems="2"
        android:imeOptions="actionDone"
        android:inputType="textCapCharacters"
        android:maxLength="1"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/hiddenWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guessLabel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="******"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/guessedChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvHint"
        android:layout_alignLeft="@+id/guessLabel"
        android:layout_marginBottom="19dp"
        android:text="Guessed Char:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/hiddenWord1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hiddenWord"
        android:layout_below="@+id/hiddenWord"
        android:layout_marginTop="34dp"
        android:text="******"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/guessedCharList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/guessedChar"
        android:layout_alignRight="@+id/guessCharInput"
        android:layout_alignTop="@+id/guessedChar"
        android:layout_toRightOf="@+id/guessLabel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/hangManText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHint"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:text="HANGMAN"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hangManText"
        android:layout_alignLeft="@+id/guessedChar"
        android:layout_marginBottom="16dp"
        android:text="Hint"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/hiddenWord2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hiddenWord1"
        android:layout_below="@+id/hiddenWord1"
        android:layout_marginTop="31dp"
        android:text="******"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/guessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hiddenWord2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:text="Guess Enter"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/guessEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guessLabel"
        android:layout_below="@+id/guessLabel"
        android:text="Enter" />

</RelativeLayout>